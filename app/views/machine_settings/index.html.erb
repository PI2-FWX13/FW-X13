<p id="notice"><%= notice %></p>

<h1>Machine Settings</h1>

<table>
  <thead>
    <tr>
      <th>Offset</th>
      <th>Maximum size mandril</th>
      <th>Size radius</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @machine_settings.each do |machine_setting| %>
      <tr>
        <td><%= machine_setting.offset %></td>
        <td><%= machine_setting.maximum_size_mandril %></td>
        <td><%= machine_setting.size_radius %></td>
        <td><%= link_to 'Show', machine_setting %></td>
        <td><%= link_to 'Edit', edit_machine_setting_path(machine_setting) %></td>
        <td><%= link_to 'Destroy', machine_setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

